ARG IMAGE_REPOSITORY
ARG IMAGE_VERSION

FROM $IMAGE_REPOSITORY/thingsboard-build:$IMAGE_VERSION AS build

ARG IMAGE_REPOSITORY

FROM $IMAGE_REPOSITORY/thingsboard-base

LABEL maintainer="mehyaa@gmail.com"

COPY docker-entrypoint-http-transport.sh /usr/bin/docker-entrypoint.sh

COPY --from=build /src/msa/transport/http/target/tb-http-transport.deb /tmp

RUN chmod a+x /usr/bin/docker-entrypoint.sh

RUN yes | dpkg -i /tmp/tb-http-transport.deb

RUN rm /tmp/tb-http-transport.deb

RUN systemctl --no-reload disable --now tb-http-transport.service > /dev/null 2>&1 || :

RUN chown -R thingsboard:thingsboard /tmp

RUN chmod 555 /usr/share/tb-http-transport/bin/tb-http-transport.jar

USER thingsboard

ENTRYPOINT ["docker-entrypoint.sh"]

CMD []
